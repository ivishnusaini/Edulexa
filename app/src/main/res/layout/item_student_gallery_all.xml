<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:elevation="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/gallery_student_document_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffd4d4"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:elevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardPreventCornerOverlap="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.edulexa.views.RegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Pdf"
                    android:textColor="@color/primaray_text_color"
                    android:textSize="@dimen/_14ssp" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="vertical">

            <com.edulexa.views.MediumTextView
                android:id="@+id/tv_gallery_student_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Social Science Syllabus"
                android:textColor="@color/primaray_text_color"
                android:textSize="@dimen/_14ssp" />

            <com.edulexa.views.RegularTextView
                android:id="@+id/tv_gallery_student_syllabus_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Syllabus for 2020 batch"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/_13ssp" />

            <com.edulexa.views.RegularTextView
                android:id="@+id/tv_gallery_student_syllabus_pages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 pages / 360 KB"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/_13ssp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/gallery_student_video_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffd4d4"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="@dimen/_10sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:elevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardPreventCornerOverlap="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_dummy_image"
                    android:contentDescription="@string/app_name" />

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ic_play"
                            android:contentDescription="@string/app_name" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="vertical">

            <com.edulexa.views.MediumTextView
                android:id="@+id/tv_gallery_student_subject_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chapter wise  MCQ Questions &amp; Answers"
                android:textColor="@color/primaray_text_color"
                android:textSize="@dimen/_14ssp" />

            <com.edulexa.views.RegularTextView
                android:id="@+id/tv_gallery_student_video_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Stream Capture"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/_13ssp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/gallery_student_image_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffd4d4"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="@dimen/_10sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:elevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardPreventCornerOverlap="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_dummy_image"
                    android:contentDescription="@string/app_name" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="vertical">

            <com.edulexa.views.MediumTextView
                android:id="@+id/tv_gallery_student_subject_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image 1"
                android:textColor="@color/primaray_text_color"
                android:textSize="@dimen/_14ssp" />

            <com.edulexa.views.RegularTextView
                android:id="@+id/tv_gallery_student_image_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image description"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/_13ssp" />


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>