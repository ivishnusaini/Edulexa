<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:elevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.edulexa.views.MediumTextView
                    android:id="@+id/tv_exam_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="15dp"
                    android:layout_toStartOf="@+id/exam_icon_LL"
                    android:text="@string/online_exam_staff_exam_name"
                    android:textSize="@dimen/_14ssp" />

                <LinearLayout
                    android:id="@+id/exam_icon_LL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_notification"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/ic_notification_staff"
                        android:contentDescription="@string/app_name" />


                    <ImageView
                        android:id="@+id/iv_edit_exam"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/pencil_staff" />

                    <ImageView
                        android:id="@+id/iv_delete"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/remove_staff" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.edulexa.views.RegularTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/online_exam_staff_exam_type"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <com.edulexa.views.RegularTextView
                    android:id="@+id/tv_exam_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text=""
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <com.edulexa.views.RegularTextView
                    android:id="@+id/tv_questions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_5"
                    android:backgroundTint="@color/colorPrimary"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="2dp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="2dp"
                    android:text="@string/online_exam_staff_questions"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

                <com.edulexa.views.RegularTextView
                    android:id="@+id/tv_subjective"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/bg_button_5"
                    android:backgroundTint="@color/colorPrimary"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="2dp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="2dp"
                    android:text="@string/online_exam_staff_subjective"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

                <com.edulexa.views.RegularTextView
                    android:id="@+id/tv_results"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/bg_button_5"
                    android:backgroundTint="@color/colorPrimary"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="2dp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="2dp"
                    android:text="@string/online_exam_staff_Results"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>