<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="@dimen/_120sdp"
    android:layout_margin="@dimen/_5sdp"
    android:elevation="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp">

    <RelativeLayout
        android:id="@+id/notice_board_top_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d4ffea"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/iv_dashboard_notice_board_card_view"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_50sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardPreventCornerOverlap="false">

            <ImageView
                android:id="@+id/iv_student_dashboard_notice_board"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name" />

        </androidx.cardview.widget.CardView>

        <com.agot.views.RegularTextView
            android:id="@+id/tv_notice_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_below="@+id/iv_dashboard_notice_board_card_view"
            android:text=""
            android:ellipsize="end"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/primaray_text_color"
            android:textSize="@dimen/_12ssp" />

        <com.agot.views.RegularTextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text=""
            android:layout_alignParentBottom="true"
            android:textColor="@color/secondary_text_color"
            android:textSize="@dimen/_10ssp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>