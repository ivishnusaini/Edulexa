<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/bg_border_5"
    android:backgroundTint="@color/gray">

    <com.edulexa.views.RegularTextView
        android:id="@+id/tv_transport_route_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/primaray_text_color"/>

    <com.edulexa.views.RegularTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:text="@string/transport_student_available_vehicle"
        android:textColor="@color/primaray_text_color"/>

    <LinearLayout
        android:id="@+id/vehicle_list_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:orientation="vertical"/>

</LinearLayout>