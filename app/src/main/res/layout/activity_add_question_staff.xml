<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.student.fee.activity.FeeStudentActivity">

    <RelativeLayout
        android:layout_width="@dimen/_100sdp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="@drawable/header_bg_staff">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_back_white" />

        <com.edulexa.views.MediumTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_toEndOf="@+id/iv_back"
            android:text="@string/online_exam_staff_add_question"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_60sdp"
        android:background="@drawable/header_top_right_radius"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_lay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_border_5"
                    android:backgroundTint="@color/card_view_bg"
                    android:orientation="vertical">

                    <com.edulexa.views.RegularEditText
                        android:id="@+id/et_question"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="@string/online_exam_staff_write_question_here"
                        android:inputType="textMultiLine"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/primaray_text_color"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <com.edulexa.views.RegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="20dp"
                        android:text="@string/online_exam_staff_attachment"
                        android:textColor="@color/primaray_text_color"
                        android:textSize="@dimen/_14ssp" />

                    <ImageView
                        android:id="@+id/iv_gallery"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_gallery" />

                    <ImageView
                        android:id="@+id/iv_camera"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_camera"
                        android:visibility="visible" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_marginTop="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/iv_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/ic_no_data_found"
                        android:contentDescription="@string/app_name" />

                    <ImageView
                        android:id="@+id/iv_remove"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_close"
                        android:visibility="gone" />

                </RelativeLayout>

                <com.edulexa.views.MediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/online_exam_staff_question_type"
                    android:textColor="@color/primaray_text_color"
                    android:textSize="@dimen/_14ssp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/bg_button_5"
                    android:backgroundTint="@color/card_view_bg">

                    <Spinner
                        android:id="@+id/question_type_spinn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/ic_drop_down"
                        android:contentDescription="@string/app_name" />

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_mcq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:elevation="@dimen/_5sdp"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <com.edulexa.views.RegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/online_exam_staff_select_correct_answar"
                            android:textColor="@color/primaray_text_color"
                            android:textSize="@dimen/_14ssp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/mcq_checkbox_option_a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tag="AQ_ansOptA_CB" />

                            <com.edulexa.views.RegularEditText
                                android:id="@+id/et_mcq_option_a"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/online_exam_staff_mcq_option_a"
                                android:inputType="textMultiLine"
                                android:textColor="@color/primaray_text_color" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/mcq_checkbox_option_b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tag="AQ_ansOptB_CB" />

                            <com.edulexa.views.RegularEditText
                                android:id="@+id/et_mcq_option_b"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/online_exam_staff_mcq_option_b"
                                android:inputType="textMultiLine"
                                android:textColor="@color/primaray_text_color" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/mcq_checkbox_option_c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tag="AQ_ansOptC_CB" />

                            <com.edulexa.views.RegularEditText
                                android:id="@+id/et_mcq_option_c"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/online_exam_staff_mcq_option_c"
                                android:inputType="textMultiLine"
                                android:textColor="@color/primaray_text_color" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/mcq_checkbox_option_d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tag="AQ_ansOptD_CB" />

                            <com.edulexa.views.RegularEditText
                                android:id="@+id/et_mcq_option_d"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/online_exam_staff_mcq_option_d"
                                android:inputType="textMultiLine"
                                android:textColor="@color/primaray_text_color" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_integer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:elevation="@dimen/_5sdp"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <com.edulexa.views.RegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/online_exam_staff_integer_answer"
                            android:textColor="@color/primaray_text_color"
                            android:textSize="@dimen/_14ssp" />

                        <com.edulexa.views.RegularEditText
                            android:id="@+id/et_integer_answer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/online_exam_staff_integer_write_answer"
                            android:inputType="textMultiLine"
                            android:textColor="@color/primaray_text_color" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <com.edulexa.views.MediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/online_exam_staff_subject"
                    android:textColor="@color/primaray_text_color"
                    android:textSize="@dimen/_14ssp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/bg_button_5"
                    android:backgroundTint="@color/card_view_bg">

                    <Spinner
                        android:id="@+id/subject_spinn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/ic_drop_down"
                        android:contentDescription="@string/app_name" />

                </RelativeLayout>

                <com.edulexa.views.MediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/online_exam_staff_marks"
                    android:textColor="@color/primaray_text_color"
                    android:textSize="@dimen/_14ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/bg_border_5"
                    android:backgroundTint="@color/card_view_bg"
                    android:orientation="vertical">

                    <com.edulexa.views.RegularEditText
                        android:id="@+id/et_exam_marks"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@null"
                        android:hint="@string/online_exam_staff_passing_enter_here"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:textColor="@color/primaray_text_color"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/bottom_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_0"
                android:text="@string/online_exam_staff_submit"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_add_more"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_0"
                android:text="@string/online_exam_staff_add_more"
                android:textAllCaps="false"
                android:textColor="@color/white" />


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>