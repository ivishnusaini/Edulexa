<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ForgotPasswordActivity">

    <RelativeLayout
        android:layout_width="@dimen/_100sdp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_260sdp"
        android:background="@drawable/header_bg_staff">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_splash"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/app_icon_without_bg"
                android:backgroundTint="@color/red"
                android:contentDescription="@string/app_name" />

            <com.agot.views.BoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/app_name"
                android:textColor="@color/red"
                android:textSize="@dimen/_16ssp" />

        </LinearLayout>

        <com.agot.views.RegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_15sdp"
            android:text="@string/forgot_password"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_260sdp"
        android:background="@drawable/header_top_right_radius"
        android:orientation="vertical">


        <com.agot.views.RegularTextView
            android:id="@+id/tv_create_password_label_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:text="@string/create_new_password_forgot_password"
            android:textColor="@color/primaray_text_color"
            android:textSize="@dimen/_16ssp" />


        <com.agot.views.MediumEditText
            android:id="@+id/et_create_new_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/tv_create_password_label_forgot_password"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@null"
            android:hint="@string/dummy_password_hint_forgot_password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLength="15"
            android:textColor="@color/primaray_text_color"
            android:textSize="@dimen/_16ssp" />


        <com.agot.views.RegularTextView
            android:id="@+id/tv_confirm_password_label_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_create_new_password"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:text="@string/confirm_new_password_forgot_password"
            android:textColor="@color/primaray_text_color"
            android:textSize="@dimen/_16ssp" />


        <com.agot.views.MediumEditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/tv_confirm_password_label_forgot_password"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@null"
            android:hint="@string/dummy_password_hint_forgot_password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="15"
            android:textColor="@color/primaray_text_color"
            android:textSize="@dimen/_16ssp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:orientation="vertical">

            <com.agot.views.RegularButton
                android:id="@+id/tv_submit_forgot_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/ripple_effect_25"
                android:gravity="center"
                android:text="@string/submit_forgot_password"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp" />

            <com.agot.views.RegularTextView
                android:id="@+id/tv_cancel_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:text="@string/cancel_forgot_password"
                android:textColor="@color/red"
                android:textSize="@dimen/_16ssp" />


        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>