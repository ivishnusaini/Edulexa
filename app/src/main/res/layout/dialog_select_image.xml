<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20ssp"
        android:elevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:background="@color/colorPrimary">


                <com.edulexa.views.BoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp" />

            </RelativeLayout>

            <com.edulexa.views.RegularTextView
                android:id="@+id/tv_dialog_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_20sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:gravity="center"
                android:textColor="@color/primaray_text_color"
                android:text="@string/online_exam_student_question_ans_camera"
                android:textSize="@dimen/_16ssp" />

            <com.edulexa.views.RegularTextView
                android:id="@+id/tv_dialog_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_20sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:gravity="center"
                android:textColor="@color/primaray_text_color"
                android:text="@string/online_exam_student_question_ans_gallery"
                android:textSize="@dimen/_16ssp" />

            <com.edulexa.views.RegularTextView
                android:id="@+id/tv_dialog_file_manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_20sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:gravity="center"
                android:textColor="@color/primaray_text_color"
                android:text="@string/online_exam_student_question_ans_file_manager"
                android:textSize="@dimen/_16ssp"
                android:visibility="gone"/>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>